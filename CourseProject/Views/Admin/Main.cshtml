@inject IViewLocalizer localizer

<div class="d-flex flex-column m-auto mt-4">
    <a asp-action="Users" asp-controller="Admin" class="btn btn-outline-info border-custom flex-grow-1 font-weight-bold">
        @localizer["Manage_Users"]
    </a>
    <a asp-action="Themes" asp-controller="Admin" class="btn btn-outline-info border-custom flex-grow-1 font-weight-bold">
        @localizer["Manage_Themes"]
    </a>
    <a asp-action="Resources" asp-controller="Admin" class="btn btn-outline-info border-custom flex-grow-1 font-weight-bold">
        @localizer["Manage_Resources"]
    </a>
</div>