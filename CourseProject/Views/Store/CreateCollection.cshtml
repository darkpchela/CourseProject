@model CreateCollectionVM
    <div class="d-flex justify-content-center">
        <div class="p-2 w-75" style="max-width: 768px;">
            <h3 class="text-center">
                New collection
            </h3>
            <form>
                <div class="d-flex flex-column align-items-center">
                    <input type="text" class="form-control w-75 text-center"
                           placeholder="Collection name">
                    <div class="text-center mt-2">
                        <h6 class="text-muted">
                            Drag here an image
                        </h6>
                        <div class=" rounded align-self-center text-center pt-2"
                             style="width: 20vh; height: 20vh; background-color: gainsboro;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                 fill="currentColor" class="w-50 h-50 mt-5" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M15 12V6a1 1 0 0 0-1-1h-1.172a3 3 0 0 1-2.12-.879l-.83-.828A1 1 0 0 0 9.173 3H6.828a1 1 0 0 0-.707.293l-.828.828A3 3 0 0 1 3.172 5H2a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                                <path fill-rule="evenodd"
                                      d="M8 11a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                                <path d="M3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                            </svg>
                            <input type="hidden">
                        </div>
                    </div>
                    <input type="text" placeholder="Collection theme"
                           class="mt-2 form-control w-75 text-center">
                    <div class="text-center mt-3 w-75">
                        <h6 class="text-muted">Description(Markdown)</h6>
                        <textarea class="form-control form-control w-100 text-center"
                                  placeholder="Collection description"
                                  style="min-height: 20vh;"></textarea>
                    </div>
                    <div class="text-center mt-3 w-75">
                        <h6 class="text-muted">Optional fields</h6>
                        <div>
                            <div class="d-flex flex-row flex-nowrap justify-content-between border-custom p-1">
                                <span class="d-inline-block float-left" style="width: 20%;">
                                    Field #1
                                </span>
                                <span class="d-inline-block " style="width: 35%;">
                                    FieldName
                                </span>
                                <span class="d-inline-block text-center " style="width: 35%;">
                                    Type
                                </span>
                                <a class="d-inline-block btn p-0" style="width: 10%;">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                         class="tiny-icon" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                </a>
                            </div>
                            <div class="w-100">
                                <div>
                                    <a href="#" class="btn p-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                             class="tiny-icon" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                  d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                            <path fill-rule="evenodd"
                                                  d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                        </svg>
                                    </a>
                                </div>
                                <div class="w-100 d-flex flex-row justify-content-between mt-2">
                                    <a href="#" class="btn p-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                             class="bigger-icon" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                  d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                        </svg>
                                    </a>
                                    <a href="#" class="btn p-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                             class="bigger-icon" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                  d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>