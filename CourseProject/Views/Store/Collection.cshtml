@model CollectionVM
@inject ISessionHelper sessionHelper

<div class="h-100">
    <div class="h-100 w-100 mt-3 d-flex flex-column">
        <div class="border-bottom-custom">
            <div class="col-8 offset-2 text-center">
                <h4 class="d-inline-block w-75">
                    @Model.Name
                </h4>
                <h6>
                    Owner: <a class="btn font-weight-bold" asp-action="Info" asp-controller="Profile" asp-route-id="@Model.Owner.Id">@Model.Owner.Username</a>
                </h6>
            </div>
        </div>
        <div class="d-flex flex-row flex-wrap justify-content-center w-100 border-bottom-custom">
            <div class="flex-grow-0">
                <div class="p-2 text-center">
                    <img class="img-fluid img-thumbnail mx-square-40" src="@Model.ImageUrl" alt="picture">
                    <h5>@Model.Name</h5>
                </div>
            </div>
            <div class="flex-grow-1 p-1 text-center">
                <h5 class="text-center">Description</h5>
                <div class="w-100" style="min-width: 300px;">
                    @Model.Description
                </div>
            </div>
        </div>
        <div class="mt-1">
            <div id="items" class="d-flex flex-row flex-md-row flex-wrap align-items-baseline justify-content-center">

                @if (User.IsInRole("admin") || Model.Owner.Id == sessionHelper.GetCurrentUserId())
                {
                    <div class="m-1 mx-square-20 text-center">
                        <a asp-action="CreateItem" asp-controller="Profile" asp-route-collectionId="@Model.Id" class="btn p-0 h-50 w-50">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 fill="currentColor" class="h-100 w-100" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path fill-rule="evenodd"
                                      d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </a>
                    </div>
                }

                @foreach (var item in Model.Items)
                {
                    <div class=" m-1 text-center">
                        <div class="p-2">
                            <a asp-action="Item" asp-controller="Store" asp-route-id="@item.Id" data-placement="bottom" data-toggle="tooltip" data-html="true" title="tooltip">
                                <img class="img-fluid img-thumbnail mx-square-20"
                                     src="@item.ImageUrl"
                                     alt="picture">
                            </a>
                        </div>
                        <div>
                            <h5>@item.Name</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>