@model ProfileVM
<div class="h-100">
    <div class="h-100 w-100 mt-3 d-flex flex-column">
        <div class="border-bottom-custom">
            <div class="col-8 offset-2 text-center">
                <h4 class="d-inline-block w-75">
                    @Model.User.FirstName @Model.User.LastName
                </h4>
                <h6>
                    @Model.Username
                </h6>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center mt-2">
            <div class="btn-group">
                <a href="#" id="btnGetCollections" class="btn btn-outline-info font-weight-bold ">
                    Collections
                </a>
                <a href="#" id="btnGetItems" class="btn btn-outline-info font-weight-bold">
                    Items
                </a>
            </div>
        </div>
        <div class="mt-2">
            <div id="view" class="d-flex flex-row flex-wrap align-items-baseline justify-content-center">
                @Html.RenderPartialAsync("Profile/_Collections")
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
<script>
    $('#btnGetCollections').click(e => {
        e.preventDefault();
        $('#view').empty();
        $.get("/Store/_Collections", data => {
            $('#view').html(data);
        });
    });
    $('#btnGetItems').click(e => {
        e.preventDefault();
        $('#view').empty();
        $.get("/Store/_Items", data => {
            $('#view').html(data);
        });
    });
</script>
}