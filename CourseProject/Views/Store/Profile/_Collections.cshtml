@model IList<CollectionVM>
<div>
    <div class="d-flex flex-row flex-wrap align-items-baseline justify-content-center">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="m-1 square-25 text-center">
                <div class="p-2">
                    <a asp-action="Collection" asp-controller="Store" asp-route-id="@Model[i].Id" class="btn p-0 btn-outline-info">
                        <img class="img-fluid img-thumbnail"
                             src="https://i.pinimg.com/originals/ff/b9/db/ffb9dbf3712b8da5d229334dbf499f16.jpg"
                             alt="picture">
                    </a>
                </div>
                <div>
                    <h5>@Model[i].Name</h5>
                </div>
                <div>
                    <h6>Items: <span>@Model[i].Items.Count</span></h6>
                </div>
            </div>
        }
    </div>
</div>