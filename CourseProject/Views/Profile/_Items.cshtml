@model ProfileItemsVM
<div class="d-flex flex-row flex-wrap align-items-baseline justify-content-center">
    @if (Model.AllowEdit)
    {
        <div class="m-1 mx-square-20 text-center">
            <a asp-action="CreateItem" asp-controller="Profile" class="btn p-0 h-50 w-50">
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="currentColor" class="h-100 w-100" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path fill-rule="evenodd"
                          d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </a>
        </div>
    }
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        <div name="item" data-id="@Model.Items[i].Id" data-name="@Model.Items[i].Name" class="m-1 text-center">
            <div class="p-2">
                <a asp-action="Item" asp-controller="Store" asp-route-id="@Model.Items[i].Id" class="btn p-0 btn-outline-info">
                    <img class="img-fluid img-thumbnail mx-square-20"
                         src="@Model.Items[i].ImageUrl"
                         alt="picture">
                </a>
            </div>
            <div class="w-75 p-2 m-auto">
                <h5 class="text-wrap">@Model.Items[i].Name</h5>
            </div>
            @if (Model.AllowEdit)
            {
                <div name="editTools" class="position-relative" style="display: none;">
                    <button name='btnDeleteItem' data-id="@Model.Items[i].Id" class="btn btn-hidden p-0 position-absolute medium-icon"
                             data-toggle="modal" data-target="#delItemModal" style="bottom: 0px; left: 0px;">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-100" viewBox="0 0 16 16" fill="currentColor">
                            <path fill-rule="evenodd"
                                  d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path fill-rule="evenodd"
                                  d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </button>
                    <a asp-action="EditItem" asp-controller="Profile" asp-route-id="@Model.Items[i].Id"
                       class="btn btn-hidden p-0 position-absolute medium-icon" style="bottom: 1px; right: 1px;">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" class="h-100" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </div>
            }
        </div>
    }
</div>