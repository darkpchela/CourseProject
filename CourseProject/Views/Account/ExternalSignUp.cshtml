@model ExternalSignUpVM
@inject IViewLocalizer localizer

<div class="col-md-4 offset-md-4 col-6 offset-3 mt-5">
    <div class="border-custom rounded p-2">
        <form asp-action="ExternalSignUp" asp-controller="Account" method="post" class="text-center">
            <div class="form-group">
                <label>@localizer["First_name"]</label>
                <input type="email" class="form-control" asp-for="FirstName" readonly placeholder="@localizer["First_name"]">
            </div>
            <div class="form-group">
                <label>@localizer["Last_name"]</label>
                <input type="email" class="form-control" asp-for="LastName" readonly placeholder="@localizer["Last_name"]">
            </div>
            <div class="form-group">
                <label>@localizer["Email"]</label>
                <input type="email" class="form-control" asp-for="Email" readonly placeholder="@localizer["Email"]">
            </div>
            <button type="submit" class="btn font-weight-bolder">@localizer["Confirm"]</button>
        </form>
        <div asp-validation-summary="All">
        </div>
    </div>
</div>